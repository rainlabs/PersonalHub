{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "article",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "body": {
      "type": "richtext",
      "required": true
    },
    "topic": {
      "type": "enumeration",
      "enum": [
        "walk",
        "thought",
        "butthurt",
        "programming",
        "receipt"
      ],
      "default": "walk",
      "required": true
    },
    "imagePreview": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "originalDate": {
      "type": "date"
    },
    "references": {
      "type": "component",
      "repeatable": true,
      "component": "blog.external-links"
    },
    "location": {
      "type": "component",
      "repeatable": false,
      "component": "blog.location"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    }
  }
}
